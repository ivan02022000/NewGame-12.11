#:kivy 1.11.1

# Виджет Предмет
<Item>:
	size:10,10
	canvas:
		Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos:self.pos
            size:self.size

# Виджет Изображение
<Img>:
	size:10,10
	canvas:
		Color:
            rgba: 1, 1, 0, 0
        Rectangle:
            pos:self.pos
            size:self.size

# Виджет Комната
<Room>:
    size: self.width, self.height
    canvas:
		Color:
            rgba: 1, 0, 0, 0.2
        Rectangle:
            pos:0, 0
            size:self.size

# Виджет Дом
<House>:
    size: self.width, self.height

    canvas:
		Color:
            rgba: 0, 0, 1, 0.2
        Rectangle:
            pos:0, 0
            size:self.size
	
# Игра Scroller
<ScrollerGame>:
    house: house_id

    House:
        id: house_id
        center: root.center

	# Left border
	Widget:
		size: 500, 1100
        x: root.center_x - 500 - 500
        center_y: root.center_y
		canvas:
			Color:
				rgba: 0, 1, 0, 0.5
			Rectangle:
				pos:self.pos
				size:self.size

	# Right border
	Widget:
		size: 500, 1100
        x: root.center_x + 500
        center_y: root.center_y
		canvas:
			Color:
				rgba: 0, 1, 0, 0.5
			Rectangle:
				pos:self.pos
				size:self.size
	
	# Upper border
	Widget:
		size: 1000, 10
        center_x: root.center_x
        y: root.center_y + 500
		canvas:
			Color:
				rgba: 0, 1, 0, 0.5
			Rectangle:
				pos:self.pos
				size:self.size

	# Below border
	Widget:
		size: 1000, 10
        center_x: root.center_x
        y: root.center_y - 500 - 10
		canvas:
			Color:
				rgba: 0, 1, 0, 0.5
			Rectangle:
				pos:self.pos
				size:self.size